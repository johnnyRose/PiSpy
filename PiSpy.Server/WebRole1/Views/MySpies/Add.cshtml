@model WebRole1.Models.PiSpyDevice
@{
    ViewBag.Title = "Add";
}

@if (Model.Id == 0)
{
    <h2>Add a PiSpy</h2>
    <p>Use this form to register a PiSpy and add it to your account.</p>
}
else
{
    <h2>Edit PiSpy @Model.Name</h2>
}

@Html.ActionLink("Cancel", "Index")

<hr />

<div class="row">
    <div class="col-md-12">
        <div class="form-horizontal">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Id)
                
                <div class="form-group">
                    @Html.LabelFor(m => m.Name, new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.SerialNumber, new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.EditorFor(m => m.SerialNumber, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(m => m.SerialNumber, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Location, new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.EditorFor(m => m.Location, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(m => m.Location, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Notes, new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.EditorFor(m => m.Notes, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(m => m.Notes, "", new { @class = "text-danger" })
                    </div>
                </div>
                
                <input type="submit" value="Submit" class="btn btn-primary" />
            }
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}